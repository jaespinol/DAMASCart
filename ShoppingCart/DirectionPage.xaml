<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShoppingCart.DirectionPage"
             Title="Direccion">

    <StackLayout Padding="12">
        <Label Text="Datos para tus envios" FontFamily="Large" FontAttributes="Bold" />
        <Label Text="Estado" FontSize="Medium"/>
        <Entry x:Name="BoxProvincia" Text="{Binding Provincia}" />
        <Label Text="Ciudad" FontSize="Medium"/>
        <Entry x:Name="BoxCiudad" Text="{Binding Ciudad}" />
        <Label Text="Direccion" FontSize="Medium"/>
        <Entry x:Name="BoxDireccion" Text="{Binding Direccion}" />
        <Label Text="Codigo Postal" FontSize="Medium"/>
        <Entry x:Name="BoxCP" Text="{Binding CodigoPostal}" />
        <Button Text="Guardar" x:Name="BtnSave" Clicked="BtnSave_Clicked" />
    </StackLayout>
    
</ContentPage>