<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShoppingCart.RecoveryPassword"
             Title="Recuperar contraseña">

    <StackLayout Padding="12" VerticalOptions="CenterAndExpand">
        <Label Text="Ingresa un correo electronico" />
        <Entry x:Name="BoxEmail" />
        <Button Text="Recuperar contraseña" x:Name="BtnRecovery" Clicked="BtnRecovery_Clicked"/>
    </StackLayout>

</ContentPage>